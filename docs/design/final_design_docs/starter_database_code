CREATE TABLE renter
(
  first_name VARCHAR(100) NOT NULL,
  last_name VARCHAR(100) NOT NULL,
  renter_email VARCHAR(255) NOT NULL,
  renter_id INT NOT NULL,
  firebase_uid VARCHAR(128) NOT NULL,
  phone VARCHAR(20),
  created_at DATETIME NOT NULL,
  PRIMARY KEY (renter_id),
  UNIQUE (renter_email),
  UNIQUE (firebase_uid)
);

CREATE TABLE rental_request
(
  request_id INT NOT NULL,
  request_date DATETIME NOT NULL,
  rental_status VARCHAR(50) NOT NULL,
  rental_name VARCHAR(100) NOT NULL,
  is_recurring BOOLEAN NOT NULL,
  start_time TIME NOT NULL,
  end_time TIME NOT NULL,
  start_date DATE NOT NULL,
  end_date DATE NOT NULL,
  date_status_change DATETIME NOT NULL,
  additional_desc TEXT,
  declined_reason TEXT,
  amount DECIMAL(10,2) NOT NULL,
  payment_link VARCHAR(255) NOT NULL,
  paid BOOLEAN NOT NULL,
  renter_id INT NOT NULL,
  recurrence_rule VARCHAR(20),
  PRIMARY KEY (request_id),
  FOREIGN KEY (renter_id) REFERENCES renter(renter_id)
);

CREATE TABLE admin
(
  admin_id INT NOT NULL,
  admin_email VARCHAR(255) NOT NULL,
  first_name VARCHAR(100) NOT NULL,
  last_name VARCHAR(100) NOT NULL,
  firebase_uid VARCHAR(128) NOT NULL,
  PRIMARY KEY (admin_id),
  UNIQUE (admin_email),
  UNIQUE (firebase_uid)
);

CREATE TABLE admin_event
(
  event_id INT NOT NULL,
  event_name VARCHAR(100) NOT NULL,
  start_time TIME NOT NULL,
  end_time TIME NOT NULL,
  event_date DATE NOT NULL,
  is_recurring BOOLEAN NOT NULL,
  start_date DATE NOT NULL,
  end_date DATE NOT NULL,
  additional_desc TEXT,
  event_submit_date DATETIME NOT NULL,
  created_date DATETIME NOT NULL,
  recurrence_rule VARCHAR(20),
  admin_id INT NOT NULL,
  PRIMARY KEY (event_id),
  FOREIGN KEY (admin_id) REFERENCES admin(admin_id)
);
